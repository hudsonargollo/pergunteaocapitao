{
	"name": "ask-the-captain",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"ingest-docs": "npx tsx scripts/ingest-docs.ts",
		"ingest-enhanced": "npx tsx scripts/ingest-enhanced-knowledge-base.ts",
		"test-enhanced-search": "npx tsx scripts/test-enhanced-search.ts",
		"validate-kb": "npx tsx scripts/validate-knowledge-base.ts",
		"kb:manage": "npx tsx scripts/manage-knowledge-base.ts",
		"kb:test-quality": "npx tsx scripts/test-search-quality.ts",
		"kb:status": "npx tsx scripts/manage-knowledge-base.ts status",
		"db:migrate:local": "wrangler d1 migrations apply --local",
		"db:migrate:remote": "wrangler d1 migrations apply --remote",
		"db:migrate": "npx tsx scripts/migrate.ts run",
		"db:migrate:status": "npx tsx scripts/migrate.ts status",
		"test": "vitest --run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:comprehensive": "npx tsx scripts/run-comprehensive-tests.ts",
		"test:comprehensive:parallel": "npx tsx scripts/run-comprehensive-tests.ts --parallel",
		"test:comprehensive:coverage": "npx tsx scripts/run-comprehensive-tests.ts --coverage",
		"test:unit": "npx tsx scripts/run-comprehensive-tests.ts --categories unit",
		"test:integration": "npx tsx scripts/run-comprehensive-tests.ts --categories integration",
		"test:accessibility": "npx tsx scripts/run-comprehensive-tests.ts --categories accessibility",
		"test:performance": "npx tsx scripts/run-comprehensive-tests.ts --categories performance",
		"test:e2e": "npx tsx scripts/run-comprehensive-tests.ts --categories e2e",
		"db:create": "wrangler d1 create ask-the-captain-db",
		"vectorize:create": "wrangler vectorize create ask-the-captain-knowledge-base --dimensions=1536 --metric=cosine",
		"r2:create": "wrangler r2 bucket create ask-the-captain-images",
		"deploy:dev": "npx tsx scripts/deploy.ts development",
		"deploy:staging": "npx tsx scripts/deploy.ts staging",
		"deploy:production": "npx tsx scripts/deploy.ts production",
		"setup:dev": "npx tsx scripts/setup-environment.ts development",
		"setup:staging": "npx tsx scripts/setup-environment.ts staging",
		"setup:production": "npx tsx scripts/setup-environment.ts production",
		"deploy:quick": "npx tsx scripts/deploy.ts development --skip-build --skip-migrations",
		"health:check": "curl -f http://localhost:3000/api/health || echo 'Health check failed'",
		"monitoring:test": "npx tsx scripts/monitoring-test.ts",
		"monitoring:dashboard": "open http://localhost:3000/api/monitoring",
		"metrics:export": "curl http://localhost:3000/api/metrics?format=prometheus > metrics.txt"
	},
	"dependencies": {
		"@opennextjs/cloudflare": "^1.6.3",
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"csv-parser": "^3.2.0",
		"framer-motion": "^12.23.12",
		"lucide-react": "^0.536.0",
		"next": "15.3.5",
		"openai": "^4.73.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20.19.9",
		"@types/pdf-parse": "^1.1.4",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/uuid": "^10.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "9.32.0",
		"eslint-config-next": "15.4.6",
		"jsdom": "^26.1.0",
		"pdf-parse": "^1.1.1",
		"tailwindcss": "^4",
		"tsx": "^4.19.2",
		"typescript": "^5",
		"vitest": "^3.2.4",
		"wrangler": "^4.27.0"
	}
}
